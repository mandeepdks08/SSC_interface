<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <header>
        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid justify-content-end">
                <form action="/logout" method="POST" class="d-flex">
                    <button class="btn btn-light btn-sm">Logout</button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="fw-bold ms-1 mb-3">
                Balance: <%= balance %>
            </div>
        </div>
        <div class="row m-1">
            <div class="text-center">
                To pay:
            </div>
        </div>
        <div class="row m-2">
            <div class="display-5 fw-bold text-center">
                &#8377; <span id="billAmount"></span>
            </div>
        </div>
        <div class="row">
            <div>
                <form action="/checkout" method="POST" onsubmit="return checkBalance()">
                    <div class="row m-2">
                        <label for="pin" class="text-center">Enter your pin</label>
                    </div>
                    <div class="row justify-content-center m-2">
                        <div class="col-6 col-md-4 col-lg-2">
                            <input type="password" class="form-control text-center" id="pin" name="pin" required>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col text-center text-danger" id="error">
                            
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col text-center">
                            <input type="number" class="d-none" name="billAmount" id="inputBillAmount">
                            <button class="btn btn-primary btn-sm">Pay</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script>
        const billAmount = parseInt(window.sessionStorage.getItem('billAmount'));
        const err = '<%= error %>';
        const errorElement = document.querySelector('#error');
        errorElement.innerText = err;
        document.querySelector('#billAmount').innerText = `${billAmount}`;
        document.querySelector('#inputBillAmount').value = billAmount;
        function checkBalance() {
            const balance = parseInt(`<%- balance %>`);
            if(balance >= billAmount) {
                errorElement.innerText = err;
                return true;
            } else {
                errorElement.innerText = "Not enough balance!";
                return false;
            }
        }
    </script>
</body>

</html>