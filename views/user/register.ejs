<% layout("layouts/boilerplate") %>
    <div class="container mt-5">
        <form action="/register" method="POST">
            <h1 class="text-center">Register</h1>
            <div class="form-group form-floating m-auto mb-3 col-md-4 col-xl-3">
                <input type="text" class="form-control" id="displayName" name="user[displayName]" placeholder="Name" autocomplete="off"
                    required>
                <label for="displayName">Name</label>
            </div>
            <div class="form-group form-floating m-auto mb-3 col-md-4 col-xl-3">
                <input type="number" class="form-control" name="user[phone]" id="phone" placeholder="Phone" autocomplete="off"
                    required>
                <label for="phone">Phone</label>
            </div>
            <div class="form-group form-floating m-auto mb-3 col-md-4 col-xl-3">
                <input type="email" class="form-control" id="email" name="user[email]" placeholder="Email Address"
                    autocomplete="off" required>
                <label for="email">Email</label>
            </div>
            <div class="form-group form-floating m-auto mb-3 col-md-4 col-xl-3">
                <input type="password" class="form-control" id="password" name="user[password]" placeholder="Password"
                    required>
                <label for="password">Password</label>
            </div>
            <div class="form-group form-floating m-auto mb-3 col-md-4 col-xl-3">
                <input type="number" class="form-control" id="paymentPin" name="user[paymentPin]" placeholder="Payment Pin" required>
                <label for="paymentPin">Payment Pin</label>
            </div>
            <div class="row mb-3">
                <div class="col text-center text-danger" id="error">

                </div>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-primary">Sign Up</button>
            </div>
        </form>
    </div>
    <script src="/register.js"></script>