<% layout("layouts/boilerplate") %> 
<div class="container mt-5">
    <form action="/login" method="POST">
        <h1 class="mb-3 text-center">Login</h1>
        <div class="form-group form-floating m-auto mb-3 col-md-4 col-xl-3">
            <input type="email" class="form-control" id="email" name="email" placeholder="Email address"
                autocomplete="off">
            <label for="email">Email address</label>
        </div>
        <div class="form-group form-floating m-auto mb-3 col-md-4 col-xl-3">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            <label for="password">Password</label>
        </div>
        <div class="row">
            <div class="col text-center text-danger" id="error">
                <% if(error) { %>
                    <%= error %>
                        <% } %>
            </div>
        </div>
        <div class="form-group text-center">
            <button class="btn btn-primary m-3">Continue</button>
        </div>
    </form>
    <div class="text-center">
        OR
    </div>
    <form action="/register" method="GET">
        <div class="form-group text-center">
            <button class="btn btn-secondary m-3">Register</button>
        </div>
    </form>

</div>